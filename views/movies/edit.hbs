<h2>Edit Movie Information</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
  <label for="title-input">Title</label>
  <input id="title-input" type="text" name="title" value="{{movie.title}}">
  <br/>
  <label for="genre-input">Genre</label>
  <input id="genre-input" type="text" name="genre" value="{{movie.genre}}">
  <br/>
  <label for="plot-input">plot</label>
  <input id="plot-input" type="text" name="plot" value="{{movie.plot}}">
  <br/>
  <button>Edit Movie</button>
</form>

